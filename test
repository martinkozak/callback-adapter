$:.push("./lib")
$:.unshift("./lib")

require "callback-adapter"
require "riot"


    class Foo
        def bar(arg, &callback)
            callback.call(arg)
        end
    end
  
context "CallbackAdapter" do
    asserts("#method_missing") do
        obj = CallbackAdapter::new(Foo::new)
        obj.bar(123) == 123
    end
end
